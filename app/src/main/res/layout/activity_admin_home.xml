<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bViewUsers"
        android:layout_width="326dp"
        android:layout_height="124dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="43dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/user1_96"
        android:gravity="left|center_vertical"
        android:text="Users"
        android:textSize="16sp"
        android:onClick="clicked"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/bViewBooks"
        android:layout_width="326dp"
        android:layout_height="124dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="43dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/book1_96"
        android:gravity="left|center_vertical"
        android:text="Books"
        android:textSize="16sp"
        android:onClick="clicked"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bViewUsers"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/bLogOut"
        android:layout_width="58dp"
        android:layout_height="65dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/logout1_30"
        android:gravity="left|center_vertical"
        android:onClick="clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bViewBooks"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>