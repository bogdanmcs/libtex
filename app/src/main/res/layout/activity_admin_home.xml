<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="211dp"
        android:layout_height="53dp"
        android:layout_marginTop="80dp"
        android:text="Hello admin!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bViewUsers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bLogOut"
        android:layout_width="124dp"
        android:layout_height="53dp"
        android:layout_marginBottom="160dp"
        android:onClick="clicked"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bViewUsers"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:layout_marginBottom="60dp"
        android:onClick="clicked"
        android:text="View users"
        app:layout_constraintBottom_toTopOf="@+id/bViewBooks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bViewBooks"
        android:layout_width="119dp"
        android:layout_height="56dp"
        android:layout_marginBottom="88dp"
        android:text="View books"
        android:onClick="clicked"
        app:layout_constraintBottom_toTopOf="@+id/bLogOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>