<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tBookTitle"
            android:layout_width="323dp"
            android:layout_height="64dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="44dp"
            android:text="Book title"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tBookAuthorName"
            android:layout_width="220dp"
            android:layout_height="41dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="96dp"
            android:text="Book author name"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tBookTitle" />

        <TextView
            android:id="@+id/tBookPublisher"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="96dp"
            android:text="Book publisher"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tBookAuthorName" />

        <TextView
            android:id="@+id/tTimestamp"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="96dp"
            android:text="Timestamp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tBookPublisher" />

        <TextView
            android:id="@+id/tDeadline"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="96dp"
            android:text="Deadline"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tTimestamp" />

        <TextView
            android:id="@+id/tTodo2"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="96dp"
            android:text="$todo"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tDeadline" />

        <TextView
            android:id="@+id/tTodo3"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="96dp"
            android:text="$todo"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tTodo2" />

        <Button
            android:id="@+id/bViewLocation"
            android:layout_width="249dp"
            android:layout_height="56dp"
            android:layout_marginStart="81dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/grey"
            android:text="View location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tTodo3"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>