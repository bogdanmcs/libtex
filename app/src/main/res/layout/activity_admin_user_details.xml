            <TextView
                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@color/royal_blue"
                android:text="ACTIONS"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tPhoneNumberHelper" />

            <Button
                android:id="@+id/bAssignBook"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/light_steel_blue"
                android:text="Assign book"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toEndOf="@+id/actions"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/actions"
                app:layout_constraintTop_toBottomOf="@+id/actions" />

            <Button
                android:id="@+id/bReturnBook"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/light_steel_blue"
                android:text="Return book"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toEndOf="@+id/bAssignBook"
                app:layout_constraintStart_toStartOf="@+id/bAssignBook"
                app:layout_constraintTop_toBottomOf="@+id/bAssignBook" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bDeleteUser"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/indian_red"
                android:text="Delete this user"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/bReturnBook"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/bReturnBook"
                app:layout_constraintTop_toBottomOf="@+id/bReturnBook"
                app:layout_constraintVertical_bias="0.0" />

