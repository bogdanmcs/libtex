<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/tBookTitle"
                android:layout_width="261dp"
                android:layout_height="43dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Book title"
                android:textAlignment="textStart"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/bookImage"
                app:layout_constraintTop_toTopOf="@+id/bookImage" />

            <TextView
                android:id="@+id/tBookAuthorName"
                android:layout_width="234dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:text="Book author name"
                android:textAlignment="textStart"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tBookTitle"
                app:layout_constraintTop_toBottomOf="@+id/tBookTitle" />

            <TextView
                android:id="@+id/tDeadline"
                android:layout_width="215dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Book return deadline"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tBookAuthorName"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="69dp"
                android:layout_height="92dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/book_small_30" />

            <TextView
                android:id="@+id/deadlineTextView"
                android:layout_width="98dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:text="Deadline"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/tDeadline"
                app:layout_constraintTop_toBottomOf="@+id/tBookAuthorName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>